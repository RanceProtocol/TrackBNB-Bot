{
  "compilerOptions": {
    "target": "es2016",                                
    "lib": ["es6"],        
    "module": "commonjs",        
    "rootDir": "src",                              
    "resolveJsonModule": true,                                   
    "outDir": "build",                                 
    "esModuleInterop": true,                       
    "forceConsistentCasingInFileNames": true,         
    "strict": true,                                  
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"]
}
